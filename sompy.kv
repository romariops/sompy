<MenuRight@BoxLayout>:
    BoxLayout:
        orientation:"vertical"
        spacing: 10

        ButtonCuston:
            text: "Home"
            on_press:app.root.current = "tablet"
        ButtonCuston:
            text: "PgUp"

        ButtonCuston:
            text: "PgDn"

        ButtonCuston:
            text: "End"


<Tablet>:
    name:"tablet"
    BoxLayout:
        orientation:"vertical"
        spacing: 5
        padding: 10
        Logo:
            size_hint:1, 0.10
        MenuUp:
            size_hint:1, 0.15
        
        BoxLayout:
            size_hint:1, 0.05
        
        BoxLayout:
            orientation:"horizontal"
            spacing: 5
            Keyboard:
            BoxLayout:
                size_hint: 0.01, 1 
            MenuRight:
                size_hint: 0.10, 1 
            

<SelectSamples>:
    name:"select_samples"
    BoxLayout:
        orientation:"vertical"
        Logo:
            size_hint:1, 0.10
        
        BoxLayout:
            orientation:"vertical"
            size_hint:1, 0.90
            spacing: 5
            padding: 10
            BoxLayout:
                canvas:
                    Color:
                        rgba:0.2,0.2,0.2,1
                    Rectangle:
                        pos:self.pos
                        size:self.size
                border:1
                FileChooser:
                    FileChooserIconLayout:
            BoxLayout:
                orientation:"horizontal"
                spacing: 5
                Keyboard:
                BoxLayout:
                    size_hint: 0.01, 1 
                MenuRight:
                    size_hint: 0.10, 1 
    